#include <stdio.h>
#include<string.h>
int main()
{
    char str1[20];
    int flag=1,len;
    printf("enter the string:");
    scanf("%[^\n]s",str1);
    len=strlen(str1);
    for(int i=0;i<len;i++)
    {
        if(str1[i]==' ')//if both the strings are equal
        {
            flag++;
        }
       
    }
  printf("no of words in a string are:%d",flag);
   
    return 0;
}
